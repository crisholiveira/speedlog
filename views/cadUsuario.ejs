<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de usuário</title>

    <link rel="stylesheet" href="/stylesheets/cadUsuario.css">
    <%- include('./partials/header.ejs') %>
    
</head>


<body>

    <div class="container">
        <form action="cadastro" method="POST">

            <div class="card">
                <h1>Cadastro de usuario</h1>

                <div class="label-float">
                    <input type="text" name="nome" id="nome" placeholder=" ">
                    <label for="nome">Primeiro nome</label>
                </div>

                <div class="label-float">
                    <input type="text" name="sobrenome" id="sobrenome" placeholder=" ">
                    <label for="nome">Sobrenome</label>
                </div>

                <div class="label-float">
                    <input type="text" name="setor" id="setor" placeholder=" ">
                    <label for="setor">Setor/Área</label>
                </div>

                <div class="label-float">
                    <input type="email" name="email" id="email" placeholder=" ">
                    <label for="email">Email</label>
                </div>            
            
                <div class="label-float">
                    <input type="password" name="senha" id="senha" placeholder=" ">
                    <label for="senha">Senha daora</label>
                </div>

                <div class="justfy-center">
                    <button>Cadastrar</button>
                </div>
            
            </div>
         
        </form>

      
    </div>
       

    <%- include('./partials/footer.ejs') %>
</body>


</html>